                                </CheckBox>
                                <CheckBox Grid.Column="2" Grid.Row="8" Margin="10,0" VerticalAlignment="Center" FontFamily="{StaticResource Menu}" Foreground="White" Content="Disney Castle"/>

                                <Grid Grid.Column="2" Grid.Row="9">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <CheckBox Grid.Row="0" Margin="10,0,0,-10" VerticalAlignment="Center" FontFamily="{StaticResource Menu}" Foreground="White" Content="Puzzles"/>
                                    <CheckBox Grid.Row="1" Margin="10,0,0,10" VerticalAlignment="Center" FontFamily="{StaticResource Menu}" Foreground="White" Content="Item Synthesis"/>

                                </Grid>

                            </Grid>

                        </Grid>

                    </Grid>


                </Grid>







            </TabItem>
            <TabItem Header="Visual/Other">
                <Grid Background="#303030"/>
            </TabItem>
        </TabControl>



    </DockPanel>
</Window>
